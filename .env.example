# Sado Music Bot Configuration
# Copy this to .env and fill in the values

BOT_TOKEN=your_bot_token_here

# Admin user ID who approves/rejects track submissions
# Get your user ID by sending /start to @userinfobot
ADMIN_ID=0

# App settings
APP_NAME=Sado Music
DB_PATH=sado.db
MAX_DONATIONS_PER_HOUR=5

# Genre channels (get IDs using /chatid in each channel)
# Bot must be admin in these channels
CHANNEL_POP=0
CHANNEL_ROCK=0
CHANNEL_HIPHOP=0
CHANNEL_DISCOVERY=0

# Discussion groups for each genre channel
# These are linked discussion groups where comments appear
# Get IDs using /chatid in each group
DISCUSSION_POP=0
DISCUSSION_ROCK=0
DISCUSSION_HIPHOP=0
DISCUSSION_DISCOVERY=0

